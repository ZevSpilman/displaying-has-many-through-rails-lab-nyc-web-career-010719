<h1><%= @patient.name %></h1>
<h2>Appoinments</h2>
<% @patient.appointments.each do |app| %>
<p><%=Date::MONTHNAMES[app.appointment_datetime.month]%>
<%=app.appointment_datetime.day%>,
<%=app.appointment_datetime.year%>
at
<%=app.appointment_datetime.strftime("%H:%M")%>

</p>
<%= link_to(app.doctor.name, app.doctor) %>

<% end %>
